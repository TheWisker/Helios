validpgpkeys=()
sha512sums=('6e6aa191a5244c295905eb259a68656f4c2b962b11274a9807340892370fdbe1e944a3463b3d1b83c934046de426bb91bf0bdd6de38f034e8967a046769cd96e')

package() {
    mkdir -p "${pkgdir}/etc/skel/.config/"
    cp -r "${srcdir}/${pkgname}-${pkgver}/.config/"* "${pkgdir}/etc/skel/.config/"
}
